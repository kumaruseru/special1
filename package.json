{
  "name": "space-social-network",
  "version": "2.0.0",
  "description": "A modern space-themed social network application",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "NODE_ENV=development node server.js",
    "production": "NODE_ENV=production node server.js",
    "prestart": "npm run install-check",
    "install-check": "node -e \"console.log('✅ Dependencies OK')\"",
    "build": "npm install --production && echo '✅ Build completed!'",
    "build:production": "NODE_ENV=production npm run build",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:clean": "docker-compose down -v && docker system prune -f",
    "static": "http-server -p 3000 -o -c-1",
    "lint": "echo 'Linting disabled - ESLint 9 requires configuration update'",
    "lint:fix": "echo 'Linting disabled - ESLint 9 requires configuration update'",
    "test": "echo 'No tests specified yet - TODO: Add test suite'",
    "test:security": "node scripts/test-xss-protection.js",
    "security:audit": "npm audit && npm audit fix",
    "security:check": "npm audit --audit-level moderate",
    "security:validate": "node scripts/security-validator.js",
    "security:test": "node scripts/test-xss-protection.js",
    "security:fix-html": "node scripts/fix-html-security.js",
    "security:full": "npm run security:validate && npm run security:test && npm run security:audit",
    "deploy:validate": "node scripts/deploy-production.js",
    "deploy:production": "npm run security:full && npm run deploy:validate && npm run start:production",
    "start:production": "NODE_ENV=production npm run production",
    "health-check": "node scripts/health-check.js",
    "logs": "tail -f logs/app.log",
    "logs:error": "tail -f logs/app.log | grep ERROR",
    "pm2:start": "pm2 start server.js --name cosmic-app",
    "pm2:stop": "pm2 stop cosmic-app",
    "pm2:restart": "pm2 restart cosmic-app",
    "pm2:logs": "pm2 logs cosmic-app",
    "pm2:delete": "pm2 delete cosmic-app",
    "backup": "node scripts/backup.js",
    "restore": "node scripts/restore.js",
    "migrate": "node scripts/migrate.js",
    "seed": "node seed-users.js",
    "clean": "rm -rf node_modules package-lock.json && npm install",
    "update": "npm update && npm audit fix"
  },
  "keywords": [
    "social-network",
    "space-theme",
    "web-app",
    "javascript",
    "html",
    "css"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "http-server": "^14.1.1"
  },
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "crypto-js": "^4.2.0",
    "dotenv": "^17.2.1",
    "express": "^4.19.2",
    "express-rate-limit": "^7.4.0",
    "express-validator": "^7.2.0",
    "font-awesome": "^4.7.0",
    "helmet": "^7.1.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.18.0",
    "mongoose": "^8.17.1",
    "morgan": "^1.10.0",
    "neo4j-driver": "^5.28.1",
    "nodemailer": "^6.9.16",
    "pg": "^8.16.3",
    "pm2": "^5.4.2",
    "redis": "^5.8.1",
    "socket.io": "^4.8.1",
    "winston": "^3.15.0"
  }
}
